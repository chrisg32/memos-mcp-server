{
  "name": "memos-mcp-server",
  "version": "0.1.0",
  "description": "A Model Context Protocol (MCP) server for Memos API with search, create, retrieve, and tag listing capabilities.",
  "type": "module",
  "main": "dist/server.js",
  "bin": "./dist/server.js",
  "author": "Stephen Jieying Li",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/stephen9412/memos-mcp-server"
  },
  "bugs": {
    "url": "https://github.com/stephen9412/memos-mcp-server/issues"
  },
  "homepage": "https://github.com/stephen9412/memos-mcp-server#readme",
  "keywords": [
    "memos",
    "mcp",
    "fastmcp"
  ],
  "scripts": {
    "dev": "fastmcp dev src/server.ts",
    "inspect": "fastmcp inspect src/server.ts",
    "start": "npm run build && node dist/server.js",
    "prepare": "npm run build",
    "build": "tsc && chmod +x ./dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "eslint",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "dotenv": "^16.5.0",
    "fastmcp": "^1.21.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "eslint": "^9.24.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  }
}
